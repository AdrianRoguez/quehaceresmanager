<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1"
    fx:controller="es.adrianroguez.controllers.RememberPasswordController"
    stylesheets="@css/style.css"
    fx:id="fondo"
    prefWidth="600" prefHeight="800">

    <!-- Botón para volver al login -->
    <Button fx:id="goBackButton" text="" layoutX="10" layoutY="10"
        AnchorPane.topAnchor="10"
        AnchorPane.leftAnchor="10"
        onAction="#goBack" />

    <!-- Contenedor centrado -->
    <VBox spacing="15" alignment="CENTER"
        maxWidth="300"
        AnchorPane.topAnchor="20"
        AnchorPane.bottomAnchor="20"
        AnchorPane.leftAnchor="50"
        AnchorPane.rightAnchor="50">

        <!-- Etiqueta de bienvenida -->
        <Label fx:id="tituloRememberPassword" text="" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

        <!-- Campo de email -->
        <Label fx:id="emailLabel" text="Correo electrónico:" />
        <TextField fx:id="emailField" promptText="Ej. correo@ejemplo.com" maxWidth="250" />

        <!-- Mensaje de error -->
        <Label fx:id="mensajeLabel" text="" />

        <!-- Botón de registro -->
        <Button fx:id="sendButton" text="" />

    </VBox>

</AnchorPane>